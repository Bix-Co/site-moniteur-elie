---
import "../styles/global.css";
import { MessageCircle } from "lucide-astro";

interface Props {
    title: string;
    // Optionnel : on pourrait passer la description en prop pour plus de flexibilité
}

const { title } = Astro.props;

// --- CONFIGURATION DU MONITEUR (POUR LE BOUTON FLOTTANT) ---
// À modifier pour chaque client (doit correspondre à index.astro)
const PHONE_NUMBER = "33769765789";
const WA_MESSAGE =
    "Bonjour Elie, je viens de voir ton site et je souhaite des informations...";

// Génération automatique du lien
const whatsappUrl = `https://wa.me/${PHONE_NUMBER}?text=${encodeURIComponent(WA_MESSAGE)}`;

// URL de l'image de partage (à mettre dans le dossier /public)
const SOCIAL_IMAGE = "/images/elie sommet soleil.jpg";
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Moniteur de ski privé à Tignes & Val d'Isère. Expérience sur-mesure, guidage et coaching."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <meta
            property="og:title"
            content="Elie Garcin | Private Ski Instructor Val d'Isère & Tignes"
        />
        <meta
            property="og:description"
            content="Ski Outdoor Instructor - Freeride & Rando Expert. Keep it rock as long as your rollin'!"
        />
        <meta
            property="og:image"
            content="https://site-moniteur-elie.vercel.app/images/elie sommet soleil.jpg"
        />
        <meta property="og:type" content="website" />

        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta
            property="og:description"
            content="Moniteur de ski privé à Tignes & Val d'Isère. Vivez l'expérience sur-mesure."
        />
        <meta property="og:image" content={SOCIAL_IMAGE} />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta
            property="twitter:description"
            content="Moniteur de ski privé à Tignes & Val d'Isère. Vivez l'expérience sur-mesure."
        />
        <meta property="twitter:image" content={SOCIAL_IMAGE} />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
            rel="stylesheet"
        />

        <title>{title}</title>
    </head>
    <body class="bg-[#050505] text-zinc-100 antialiased relative">
        <slot />

        <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="fixed bottom-6 right-6 z-50 bg-[#25D366] text-white p-4 rounded-full shadow-[0_0_20px_rgba(37,211,102,0.4)] hover:scale-110 transition-transform duration-300 flex items-center justify-center"
            aria-label="Contacter sur WhatsApp"
        >
            <MessageCircle class="w-8 h-8" />
        </a>
    </body>
</html>

<style is:global>
    /* Configuration Typographique Globale */
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Playfair Display", serif;
    }

    body {
        font-family: "Inter", sans-serif;
    }

    /* Utilitaires de sélection (Couleur Or) */
    ::selection {
        background-color: #d4af37;
        color: #000000;
    }
</style>
