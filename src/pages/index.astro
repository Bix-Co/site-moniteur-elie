---
import Layout from "../layouts/Layout.astro";
import {
    Phone,
    Calendar,
    Menu,
    Mountain,
    Check,
    MapPin,
    ShieldCheck,
    Star,
    Instagram,
    ArrowRight,
    PlayCircle,
} from "lucide-astro";

// --- CONFIGURATION & DATA ---
const MONITEUR = {
    nom: "Elie Garcin",
    titre: "Moniteur de Ski Diplomé d'État",
    tel: "33769765789",
    instagram: "https://www.instagram.com/elay.zob/",
    cgv: "/mentions-legales",
    calendar: "https://calendar.google.com/calendar",
};

// Messages WhatsApp
const WA_MESSAGES = {
    hero: `Bonjour Elie, je souhaite réserver une aventure sur mesure...`,
    coaching: `Bonjour Elie, je suis intéressé par ton expertise Freeride / Technique...`,
    day: `Bonjour Elie, je souhaite privatiser une Journée (Logistique & Ski)...`,
    safari: `Bonjour Elie, dis-m'en plus sur le Safari Alpin...`,
    contact: `Bonjour Elie, j'ai une question spécifique (FR/EN)...`,
};

const getWaLink = (msg: string) =>
    `https://wa.me/${MONITEUR.tel}?text=${encodeURIComponent(msg)}`;
---

<Layout title={`${MONITEUR.nom} | Moniteur Ski Tignes Val d'Isère`}>
    <main
        class="w-full overflow-x-hidden bg-ski-black text-ski-white font-sans"
    >
        <section
            class="relative h-screen w-full flex flex-col justify-center items-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/elie sommet soleil.jpg"
                    alt="Elie Garcin Sommet Soleil"
                    class="w-full h-full object-cover object-center md:object-[center_30%]"
                    loading="eager"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-b from-ski-black/70 via-black/30 to-ski-black/95"
                >
                </div>
            </div>

            <header
                class="absolute top-6 left-1/2 -translate-x-1/2 w-[95%] max-w-6xl z-40 px-6 py-4 flex justify-between items-center rounded-full border border-white/10 bg-ski-black/60 backdrop-blur-md shadow-lg shadow-black/40"
            >
                <div class="flex items-center gap-2 text-white">
                    <Mountain class="w-6 h-6 text-ski-gold" />
                    <span
                        class="font-serif text-lg font-bold tracking-wide uppercase"
                    >
                        ELIE<span class="text-ski-gold">.</span>GARCIN
                    </span>
                </div>

                <nav
                    class="hidden md:flex gap-8 text-sm font-medium text-zinc-200"
                >
                    <a
                        href="#experience"
                        class="hover:text-ski-gold transition-colors"
                        >L'Expertise</a
                    >
                    <a
                        href="#offres"
                        class="hover:text-ski-gold transition-colors">Offres</a
                    >
                    <a
                        href="#moniteur"
                        class="hover:text-ski-gold transition-colors"
                        >Le Moniteur</a
                    >
                </nav>

                <a
                    href={getWaLink(WA_MESSAGES.contact)}
                    class="hidden md:flex items-center gap-2 bg-white/10 border border-white/20 text-white px-4 py-2 rounded-full text-sm hover:bg-ski-gold/90 hover:border-ski-gold hover:text-ski-black transition-all backdrop-blur-sm"
                >
                    <Phone class="w-4 h-4" />
                    <span>Contact</span>
                </a>
                <button class="md:hidden text-white"
                    ><Menu class="w-6 h-6" /></button
                >
            </header>

            <div
                class="relative z-10 container mx-auto px-6 text-center mt-32 md:mt-10"
            >
                <div
                    class="inline-flex items-center gap-3 border border-ski-gold/50 bg-ski-black/60 backdrop-blur-xl px-6 py-2.5 rounded-full mb-8 mx-auto shadow-[0_0_20px_rgba(212,175,55,0.2)] animate-pulse-slow"
                >
                    <span
                        class="text-sm font-bold text-ski-gold tracking-[0.2em] uppercase"
                        >Expertise Internationale • FR • EN</span
                    >
                </div>

                <h1
                    class="text-5xl md:text-7xl lg:text-8xl font-semibold tracking-tight text-white mb-6 drop-shadow-2xl font-serif uppercase"
                >
                    Keep it rock<br />
                    <span
                        class="italic font-medium text-ski-gold block mt-2 drop-shadow-xl"
                        >as long as your rollin'.</span
                    >
                </h1>

                <p
                    class="text-lg md:text-xl text-zinc-300 max-w-2xl mx-auto mb-10 font-light leading-relaxed drop-shadow-md"
                >
                    Elie Garcin — {MONITEUR.titre}
                    <br class="hidden md:block" />
                    Une approche qui mêle haute technicité, sécurité et fun décomplexé
                    pour vivre l'envers du décor.
                </p>

                <div
                    class="flex flex-col md:flex-row gap-4 justify-center items-center w-full"
                >
                    <a
                        href={getWaLink(WA_MESSAGES.hero)}
                        class="w-[85%] max-w-xs md:w-auto bg-ski-gold text-ski-black px-6 py-3 rounded-full font-medium text-base hover:bg-white transition-all flex items-center justify-center gap-2 shadow-lg shadow-ski-gold/20"
                    >
                        <Phone class="w-4 h-4" />
                        Réserver mon séjour
                    </a>

                    <a
                        href={MONITEUR.calendar}
                        target="_blank"
                        class="w-[85%] max-w-xs md:w-auto border border-white/30 bg-black/20 text-white px-6 py-3 rounded-full font-medium text-base hover:bg-white/10 hover:border-white/50 transition-all backdrop-blur-sm flex items-center justify-center gap-2"
                    >
                        <Calendar class="w-4 h-4" />
                        Disponibilités
                    </a>
                </div>
            </div>

            <div
                class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce text-ski-gold/50 hidden md:block"
            >
                <ArrowRight class="w-6 h-6 rotate-90" />
            </div>
        </section>

        <section
            id="experience"
            class="bg-ski-black py-24 px-6 relative overflow-hidden"
        >
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-glacial-blue/5 rounded-full blur-[150px] pointer-events-none"
            >
            </div>

            <div class="container mx-auto max-w-6xl relative z-10">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center mb-24"
                >
                    <div class="relative group">
                        <div
                            class="absolute inset-0 border-2 border-ski-gold/30 rounded-2xl transform translate-x-4 translate-y-4 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
                        >
                        </div>
                        <img
                            src="/images/elie-skins-sunny.jpg"
                            alt="Elie Garcin Rando"
                            class="relative rounded-2xl shadow-2xl grayscale-[20%] group-hover:grayscale-0 transition-all duration-700"
                        />
                    </div>
                    <div>
                        <h2
                            class="text-4xl md:text-5xl text-white font-serif mb-6 uppercase tracking-tight"
                        >
                            De la piste au <span class="text-ski-gold"
                                >Wild</span
                            >
                        </h2>
                        <div class="h-1 w-20 bg-ski-gold mb-8"></div>
                        <p
                            class="text-zinc-300 font-light text-lg leading-relaxed mb-6"
                        >
                            Ancien athlète de haut niveau (FFA), la compétition
                            m'a appris la rigueur du tracé et la recherche de la
                            perfection technique.
                        </p>
                        <p
                            class="text-zinc-400 font-light leading-relaxed mb-8"
                        >
                            "La compétition m'a appris la rigueur, la montagne
                            l'humilité." Aujourd'hui, je mets cette expertise au
                            service d'une glisse fluide, précise et engagée.
                        </p>
                        <a
                            href="https://www.athle.fr/athletes/1431204/bilans"
                            target="_blank"
                            class="inline-flex items-center gap-2 text-ski-gold hover:text-white transition-colors"
                        >
                            <Star class="w-4 h-4" />
                            <span>Voir mon profil athlète</span>
                        </a>
                    </div>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center"
                >
                    <div class="md:order-2 relative group">
                        <div
                            class="absolute inset-0 border-2 border-ski-gold/30 rounded-2xl transform -translate-x-4 translate-y-4 group-hover:-translate-x-2 group-hover:translate-y-2 transition-transform"
                        >
                        </div>
                        <img
                            src="/images/elie mer de nuage.jpg"
                            alt="Elie Garcin Globe Trotter"
                            class="relative rounded-2xl shadow-2xl grayscale-[20%] group-hover:grayscale-0 transition-all duration-700"
                        />
                    </div>
                    <div class="md:order-1">
                        <h2
                            class="text-4xl md:text-5xl text-white font-serif mb-6 uppercase tracking-tight"
                        >
                            L'Expertise <span class="text-ski-gold"
                                >Internationale</span
                            >
                        </h2>
                        <div class="h-1 w-20 bg-ski-gold mb-8"></div>
                        <p
                            class="text-zinc-300 font-light text-lg leading-relaxed mb-6"
                        >
                            De Whakapapa en Nouvelle-Zélande aux stations
                            mythiques des USA, j'ai forgé une approche globale
                            et multiculturelle du ski.
                        </p>
                        <p class="text-zinc-400 font-light leading-relaxed">
                            Aujourd'hui basé dans les Alpes Françaises, je
                            propose un accompagnement bilingue fluide et
                            culturellement adapté à une clientèle exigeante et
                            passionnée.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section
            id="offres"
            class="bg-ski-dark py-24 px-6 relative overflow-hidden"
        >
            <div class="container mx-auto max-w-6xl relative z-10">
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-5xl text-white font-serif mb-6 drop-shadow-lg uppercase tracking-tight"
                    >
                        L'Offre <span class="text-ski-gold">Wild</span>
                    </h2>
                    <div class="w-24 h-1 bg-ski-gold/80 mx-auto shadow-lg">
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-ski-black/60 backdrop-blur-xl border border-white/5 rounded-3xl overflow-hidden hover:border-ski-gold/30 hover:scale-[1.02] transition-all duration-300 flex flex-col group shadow-2xl"
                    >
                        <div class="h-64 overflow-hidden">
                            <img
                                src="/images/elie couloire.jpg"
                                alt="Freeride Elie Garcin"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                            />
                        </div>
                        <div class="p-8 flex flex-col flex-grow">
                            <h3
                                class="text-2xl text-white font-serif mb-2 group-hover:text-ski-gold transition-colors uppercase"
                            >
                                Freeride & Rando
                            </h3>
                            <p
                                class="text-ski-gold text-sm mb-6 uppercase tracking-wider font-medium"
                            >
                                L'envers du décor
                            </p>
                            <p
                                class="text-zinc-400 font-light mb-8 text-sm leading-relaxed"
                            >
                                Explorez les couloirs secrets et les pentes
                                vierges. Une approche mêlant technique alpine et
                                alpinisme.
                            </p>
                            <a
                                href={getWaLink(WA_MESSAGES.coaching)}
                                class="mt-auto block w-full py-3 text-center border border-white/30 text-white rounded-xl hover:bg-ski-gold hover:border-ski-gold hover:text-ski-black transition-colors font-medium"
                                >Réserver mon aventure</a
                            >
                        </div>
                    </div>

                    <div
                        class="bg-ski-black/60 backdrop-blur-xl border border-ski-gold/40 rounded-3xl overflow-hidden md:-translate-y-4 shadow-2xl shadow-ski-gold/10 hover:scale-[1.02] transition-all duration-300 flex flex-col group"
                    >
                        <div class="h-64 overflow-hidden relative">
                            <img
                                src="/images/elie spatule.jpg"
                                alt="Immersion Elie Garcin"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                            />
                            <div
                                class="absolute top-0 right-0 bg-ski-gold text-ski-black text-xs font-bold px-4 py-1 rounded-bl-xl tracking-wider"
                            >
                                IMMERSION
                            </div>
                        </div>
                        <div class="p-8 flex flex-col flex-grow">
                            <h3
                                class="text-2xl text-white font-serif mb-2 uppercase group-hover:text-ski-gold transition-colors"
                            >
                                Découverte
                            </h3>
                            <p
                                class="text-ski-gold text-sm mb-6 uppercase tracking-wider font-medium"
                            >
                                Faune & Grands Espaces
                            </p>
                            <p
                                class="text-zinc-400 font-light mb-8 text-sm leading-relaxed"
                            >
                                Un voyage au cœur de la montagne. Géologie,
                                observation de la faune et itinéraires sauvages.
                            </p>
                            <a
                                href={getWaLink(WA_MESSAGES.day)}
                                class="mt-auto block w-full py-3 text-center bg-ski-gold text-ski-black rounded-xl hover:bg-white transition-colors font-medium shadow-lg font-bold"
                                >Bloquer ma date</a
                            >
                        </div>
                    </div>

                    <div
                        class="bg-ski-black/60 backdrop-blur-xl border border-white/5 rounded-3xl overflow-hidden hover:border-ski-gold/30 hover:scale-[1.02] transition-all duration-300 flex flex-col group shadow-2xl"
                    >
                        <div class="h-64 overflow-hidden">
                            <img
                                src="/images/elie-rando-fog.jpg"
                                alt="Sécurité Elie Garcin"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                            />
                        </div>
                        <div class="p-8 flex flex-col flex-grow">
                            <h3
                                class="text-2xl text-white font-serif mb-2 group-hover:text-ski-gold transition-colors uppercase"
                            >
                                Sécurité
                            </h3>
                            <p
                                class="text-ski-gold text-sm mb-6 uppercase tracking-wider font-medium"
                            >
                                Maîtrise du Risque
                            </p>
                            <p
                                class="text-zinc-400 font-light mb-8 text-sm leading-relaxed"
                            >
                                Apprenez à lire la montagne. Gestion nivologique
                                et prise de risque maîtrisée par un
                                professionnel.
                            </p>
                            <a
                                href={getWaLink(WA_MESSAGES.safari)}
                                class="mt-auto block w-full py-3 text-center border border-white/30 text-white rounded-xl hover:bg-ski-gold hover:border-ski-gold hover:text-ski-black transition-colors font-medium"
                                >En savoir plus</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section
            class="bg-ski-black/50 py-24 px-6 relative overflow-hidden backdrop-blur-sm"
        >
            <div class="container mx-auto max-w-6xl relative z-10">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center"
                >
                    <div class="md:order-1 relative group">
                        <div
                            class="absolute inset-0 border-2 border-ski-gold/30 rounded-2xl transform translate-x-4 translate-y-4 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
                        >
                        </div>
                        <img
                            src="/images/elie-arms-open.jpg"
                            alt="Elie Garcin Nature"
                            class="relative rounded-2xl shadow-2xl grayscale-[10%] group-hover:grayscale-0 transition-all duration-700"
                        />
                    </div>
                    <div class="md:order-2">
                        <h2
                            class="text-3xl md:text-5xl text-white font-serif mb-6 uppercase tracking-tight"
                        >
                            Nature & <span class="text-ski-gold"
                                >Découverte</span
                            >
                        </h2>
                        <div class="h-1 w-20 bg-ski-gold mb-8"></div>
                        <p
                            class="text-zinc-300 font-light text-lg leading-relaxed mb-6"
                        >
                            Envie d'une journée plus douce ? Je vous organise
                            une balade sur mesure, adaptée au niveau de toute la
                            famille.
                        </p>
                        <p
                            class="text-zinc-400 font-light leading-relaxed mb-8"
                        >
                            Loin des pistes bondées, prenez le temps d'admirer
                            les paysages et de profiter d'une pause thé au
                            soleil. Une approche pédagogique et bienveillante
                            pour tous les âges.
                        </p>
                        <div class="flex flex-col gap-4">
                            <div class="flex items-center gap-3 text-zinc-300">
                                <Check class="w-5 h-5 text-ski-gold" />
                                <span>Itinéraire adapté à votre condition</span>
                            </div>
                            <div class="flex items-center gap-3 text-zinc-300">
                                <Check class="w-5 h-5 text-ski-gold" />
                                <span>Découverte de la faune locale</span>
                            </div>
                            <div class="flex items-center gap-3 text-zinc-300">
                                <Check class="w-5 h-5 text-ski-gold" />
                                <span>Pause gourmande panoramique</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section
            class="py-24 bg-ski-black relative overflow-hidden border-t border-white/5"
        >
            <div class="container mx-auto max-w-6xl px-6 relative z-10">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center"
                >
                    <div>
                        <h2
                            class="text-4xl md:text-5xl text-white font-serif mb-6 uppercase tracking-tight"
                        >
                            Esprit <span class="text-ski-gold">&</span> Jeunesse
                        </h2>
                        <div class="h-1 w-20 bg-ski-gold mb-8"></div>
                        <p
                            class="text-zinc-300 font-light text-lg leading-relaxed mb-6"
                        >
                            Park, sauts, confiance : une pédagogie adaptée aux
                            enfants et ados pour une progression fun et pleine
                            d'adrénaline.
                        </p>
                        <p
                            class="text-zinc-400 font-light leading-relaxed mb-8"
                        >
                            Et l'été ? Retrouvez-moi sur les pistes de <strong
                                >VTT de descente</strong
                            > (Aspirant moniteur) pour continuer l'aventure.
                        </p>
                    </div>
                    <div class="relative group">
                        <div
                            class="absolute inset-0 border-2 border-ski-gold/30 rounded-2xl transform translate-x-4 translate-y-4 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
                        >
                        </div>
                        <img
                            src="/images/elie back flip.jpg"
                            alt="Elie Garcin Backflip"
                            class="relative rounded-2xl shadow-2xl group-hover:scale-[1.02] transition-transform duration-700"
                        />
                    </div>
                </div>
            </div>
        </section>

        <section
            id="moniteur"
            class="bg-ski-dark py-24 px-6 relative overflow-hidden"
        >
            <div class="container mx-auto max-w-5xl relative z-10">
                <div
                    class="flex flex-col md:flex-row items-center gap-12 md:gap-20"
                >
                    <div class="w-full md:w-1/2 relative group">
                        <div
                            class="absolute inset-0 border-2 border-ski-gold/30 rounded-2xl transform translate-x-4 translate-y-4 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform"
                        >
                        </div>
                        <div
                            class="relative rounded-2xl overflow-hidden aspect-[3/4] border border-white/10 shadow-2xl"
                        >
                            <img
                                src="/images/elie sommet enneigée.jpg"
                                alt="Elie Garcin Portrait"
                                class="w-full h-full object-cover grayscale-[30%] group-hover:grayscale-0 transition-all duration-700 scale-105 group-hover:scale-100"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-ski-black/80 via-transparent to-transparent"
                            >
                            </div>
                        </div>
                    </div>

                    <div class="w-full md:w-1/2">
                        <h2
                            class="text-3xl md:text-5xl text-white font-serif mb-4 uppercase"
                        >
                            Elie Garcin
                        </h2>
                        <div class="h-1 w-20 bg-ski-gold mb-6"></div>

                        <div
                            class="space-y-6 text-zinc-300 font-light leading-relaxed text-justify"
                        >
                            <p class="text-lg">
                                "L'envers du décor. Une approche qui mêle haute
                                technicité, sécurité et fun décomplexé."
                            </p>
                            <p>
                                Passionné par les grands espaces et expert du
                                freeride, j'accompagne une clientèle
                                internationale dans la découverte des plus beaux
                                itinéraires des Alpes. De mon passé de
                                compétiteur, j'ai gardé la rigueur et la
                                précision du geste, que je transmets aujourd'hui
                                avec passion et enthousiasme.
                            </p>
                        </div>

                        <div class="flex flex-wrap gap-4 mt-10">
                            <div
                                class="px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur text-sm text-zinc-300 flex items-center gap-2"
                            >
                                <Check class="w-4 h-4 text-ski-gold" /> Bilingue EN/FR
                            </div>
                            <div
                                class="px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur text-sm text-zinc-300 flex items-center gap-2"
                            >
                                <Check class="w-4 h-4 text-ski-gold" /> Expert Freeride
                            </div>
                            <div
                                class="px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur text-sm text-zinc-300 flex items-center gap-2"
                            >
                                <Check class="w-4 h-4 text-ski-gold" /> Athlète Pro
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer
            id="infos"
            class="bg-ski-black pt-20 pb-10 px-6 border-t border-white/5 relative overflow-hidden"
        >
            <div class="absolute inset-0 z-0 opacity-20">
                <img
                    src="/images/elie-hero.jpg"
                    alt="Elie Garcin Background"
                    class="w-full h-full object-cover grayscale"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-ski-black via-transparent to-ski-black"
                >
                </div>
            </div>
            <div class="container mx-auto max-w-6xl relative z-10">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
                    <div>
                        <h4
                            class="text-white font-serif text-lg mb-4 flex items-center gap-2"
                        >
                            <MapPin class="w-4 h-4 text-ski-gold" /> Zone
                        </h4>
                        <p class="text-zinc-500 font-light">
                            Val d'Isère / Tignes /<br />Meribel / Val-Thorens
                        </p>
                    </div>
                    <div>
                        <h4
                            class="text-white font-serif text-lg mb-4 flex items-center gap-2"
                        >
                            <Instagram class="w-4 h-4 text-ski-gold" /> Social
                        </h4>
                        <p class="text-zinc-500 font-light">
                            <a
                                href={MONITEUR.instagram}
                                class="hover:text-white transition-colors"
                                >Suivez l'aventure</a
                            >
                        </p>
                    </div>
                    <div>
                        <h4
                            class="text-white font-serif text-lg mb-4 flex items-center gap-2"
                        >
                            <Phone class="w-4 h-4 text-ski-gold" /> Contact
                        </h4>
                        <a
                            href={getWaLink(WA_MESSAGES.contact)}
                            class="text-zinc-400 hover:text-ski-gold transition-colors font-light"
                            >WhatsApp Direct</a
                        >
                    </div>
